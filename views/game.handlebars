<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ludo Game - Room {{roomId}}</title>
    <style>
       .game {
            display: flex;
            justify-content: space-around;
            align-items: center;
            padding: 20px;
        }

        .board {
            width: 60%;
            height: 500px;
            background-color: #f0f0f0;
            border: 2px solid #ccc;
        }

        .dice {
            width: 100px;
            height: 100px;
            margin-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .dice img {
            width: 100%;
            height: auto;
        }

        .invite {
            margin-top: 40px;
            text-align: center;
            font-family: Arial, sans-serif;
        }

        .invite p {
            margin: 10px 0;
            font-size: 18px;
        }

        .invite button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
        }

        .invite button:hover {
            background-color: #45a049;
        }

        .dice-result {
            margin-top: 10px;
            font-size: 20px;
            color: green;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const roomId = '{{roomId}}';
            const roomLink = `http://63.142.249.127:3000/game/${roomId}`;
            document.getElementById("roomLink").innerText = roomLink;

            document.getElementById("copyButton").addEventListener("click", () => {
                navigator.clipboard.writeText(roomLink).then(() => {
                    alert('Room link copied to clipboard!');
                });
            });

            const dice = document.getElementById("dice");
            const diceResult = document.getElementById("diceResult");
            const playerSide = 'player1'; // Replace with your logic to determine player side

            // Example function to switch sides
            function switchSide() {
                playerSide = (playerSide === 'player1') ? 'player2' : 'player1';
                alert(`Switched to ${playerSide}`);
            }

            dice.addEventListener("click", () => {
                rollDice(playerSide); // Pass player side to the rollDice function
            });

            function rollDice(side) {
                dice.innerHTML = `<img src="images/dice-roll.gif" alt="Rolling dice">`; // Show rolling GIF
                diceResult.innerText = `Rolling...`;

                setTimeout(() => {
                    const diceValue = Math.floor(Math.random() * 6) + 1;
                    dice.innerHTML = `<img src="images/dice${diceValue}.png" alt="Dice ${diceValue}">`;
                    diceResult.innerText = `The dice shows: ${diceValue}`;

                    // Example logic to prompt the other side
                    if (side === 'player1') {
                        alert('Click dice for player 2 to play.');
                    } else {
                        alert('Click dice for player 1 to play.');
                    }
                }, 1000); // Roll for 1 second before showing result
            }
        });
    </script>
</head>
<body>
    <!-- Your HTML structure -->
</body>
</html>
